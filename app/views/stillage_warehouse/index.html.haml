          %th.header_table
            =t('page.all.table.header_name')
          %th.header_table
            =t('page.all.table.header_texn')
          %tr{:align => "center"}
            %td
              =image_tag("design/all_parts/stillage_warehouse/Pasport_table_rama.png", :width => "200", :height => "200")
            %td
              =t('page.stillage_warehouse.index.table.name_1')
            %td
              =raw t('page.stillage_warehouse.index.table.texn_1')
          %tr{:align => "center"}
            %td
              =image_tag("design/all_parts/stillage_warehouse/Pasport_table_travers.png", :width => "200", :height => "200")
            %td
              =t('page.stillage_warehouse.index.table.name_2')
            %td
              =raw t('page.stillage_warehouse.index.table.texn_2')
          %tr{:align => "center"}
            %td
              =image_tag("design/all_parts/stillage_warehouse/usil.png", :width => "200", :height => "140")
            %td
              =t('page.stillage_warehouse.index.table.name_3')
            %td
              =raw t('page.stillage_warehouse.index.table.texn_3')