%h1.header_stillage_stillage_warehouse_stillage_pallet_trolleys
  =t('page.stillage_warehouse.index.header')
.container-fluid
  .row
    .col-md-6
      %p
  .row
    .col-md-12.all_tytle_page_img_stillage_stillage_warehouse_stillage_pallet
      =image_tag("design/all_parts/stillage_warehouse/tytle_page.gif", :class => "tytle_page_img_stillage_stillage_warehouse_stillage_pallet")
%p
%form{:action => "show", :method => "get", :name => "contact_form", :onsubmit => "return validate_form ( );"}
  .container-fluid
    .text_size{:onclick => "showHide('hiden_element_1','chg_img_1')" }
      %img{:id => "chg_img_1", :alt => "mater", :src => "/assets/plus.png", :name => "img_1", :width => "30", :height => "30"}
      =t('page.all.on_line')
    .hiden_element_1
      -if @constant.on_off_calc_stillage_warehouse==false
        .row
          .col-md-2
            =label_tag(:q, t('page.all.height'))
            %p
              (1500-5200 #{t('page.all.mm')})
            %p{:title => t('page.all.height_title')}
              %input{:maxlength => "4", :name => "hight", :pattern => "^[ 0-9]+$",
                  :size => "10", :value => "", :type => "text"}

          .col-md-2
            =label_tag(:q, t('page.all.widht'))
            %p
              (800-2700 #{t('page.all.mm')})
            %p{:title => t('page.all.widht_title')}
              %input{:maxlength => "4", :name => "widthS", :pattern => "^[ 0-9]+$",
                  :size => "10", :value => "", :type => "text"}

          .col-md-2
            =label_tag(:q, t('page.all.depth'))
            %p
              (300-1500 #{t('page.all.mm')})
            %p{:title => t('page.all.depth_title')}
              %input{:maxlength => "4", :name => "depth", :pattern => "^[ 0-9]+$",
                  :size => "10", :value => "", :type => "text"}

          .col-md-2
            =label_tag(:q, t('page.all.num_of_ur'))
            %p
              (2-15 #{t('page.all.unit')})
            %p{:title => t('page.all.num_of_ur_title')}
              %input{:maxlength => "2", :name => "num_of_shelves", :pattern => "^[ 0-9]+$",
                  :size => "10", :value => "", :type => "text"}
          .col-md-3
            =label_tag(:q, t('page.all.ur_load'))
            %p
              (150-400 #{t('page.all.kg')})
            %p{:title => t('page.stillage_warehouse.index.shelf_load_title')}
              %input{:maxlength => "3", :name => "shelf_load", :pattern => "^[ 0-9]+$",
                  :size => "10", :value => "", :type => "text"}
        .row
          .col-md-6
            .style_text_about_stillage_stillage_warehouse_stillage_pallet
              %input{:id => "group3_1", :name => "group3" , :type => "radio", :value => "metall", :checked => "checked", :onclick => "hide_dsp( )"}
              =label_tag('group3_1', t('page.stillage_warehouse.index.shelf_steel'), :class => 'radio_button_label')
              %p
                %input{:id => "group3_2", :name => "group3" , :type => "radio", :value => "dsp", :onclick => "hide_dsp( )" }
                =label_tag('group3_2', t('page.stillage_warehouse.index.dsp'), :class => 'radio_button_label')
        .row
          .col-md-6
            .style_text_about_stillage_stillage_warehouse_stillage_pallet
              %table{:cellspacing => "5", :cellpadding => "5", :border => "1", :width => "100%"}
                %tr
                  %th{:colspan => "2"}
                  =t('page.stillage_warehouse.index.okraska')
                %tr
                  %td
                    =t('page.stillage_warehouse.index.rama')
                  %td
                    %input{:id => "group1_1", :name => "group1" , :type => "radio", :value => "osinkovaniy", :checked => "checked"}
                    =label_tag('group1_1', t('page.stillage_warehouse.index.ocink'), :class => 'radio_button_label_in_table')
                    %p
                      %input{:id => "group1_2", :name => "group1" , :type => "radio", :value => "okrash"}
                      =label_tag('group1_2', t('page.stillage_warehouse.index.okrash'), :class => 'radio_button_label_in_table')
                  %tr{:id => "hiden_radio_3"}
                    %td
                      =t('page.stillage_warehouse.index.polka')
                    %td
                      %input{:id => "hiden_radio_1", :name => "group2" , :type => "radio", :value => "osinkovaniy", :checked => "checked"}
                      =label_tag('hiden_radio_1', t('page.stillage_warehouse.index.ocink'), :class => 'radio_button_label_in_table')
                      %p
                        %input{:id => "hiden_radio_2", :name => "group2" , :type => "radio", :value => "okrash"}
                        =label_tag('hiden_radio_2', t('page.stillage_warehouse.index.okrash'), :class => 'radio_button_label_in_table')
          .col-md-3
            %p
        .row
          .col-md-3
            %p
            %input{:name => "send", :type => "submit", :value => t('page.all.calculate_stillage'), :class => "btn btn-success"}
      -else
        .on_line_calculation_off
          =t('page.all.on_line_off')
%p
.container-fluid
  .row
    .col-md-12.style_text_about_stillage_stillage_warehouse_stillage_pallet
      =raw t('page.stillage_warehouse.index.abbout')
  .row
    .col-md-12.style_text_about_stillage_stillage_warehouse_stillage_pallet
      %table{:cellspacing => "5", :cellpadding => "5", :border => "1", :width => "100%"}
        %tr
          %th.header_table
