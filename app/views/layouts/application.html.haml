!!!
%html
  %head


    %meta{:content => "3ZGMYXXCBZBQNEZbdqB9TBw7nJ7IG609UeI7l3BJUXM", :name => "google-site-verification"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    %meta{:content => @meta_tags, :name => "description"}
    %meta{:charset => "UTF-8"}
    -#%meta{:name => "viewport", content: "width=device-width, initial-scale=1"}
    %title
      =t('page.layout.title')

    %script{:async => "", :src => "https://www.googletagmanager.com/gtag/js?id=UA-129364309-1"}
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    = favicon_link_tag 'stm_industry_black_100_50.jpg'
  %body
    .main
      .container-fluid
        .row
          .fix_header
            .container
              .row.layout_table
                .hamburger-menu
                  %input#menu__toggle{:type => "checkbox"}
                  %label.menu__btn{:for => "menu__toggle"}
                    %span
                  %ul.menu__box
                    %li
                      =link_to t('to_root'), root_path, class: 'menu__item'
                    %li
                      .menu__box__name
                        = t('page.layout.production')
                    %li
                      =link_to t('page.welcome.stillage'), stillage_index_path, class: 'menu__item'
                    %li
                      =link_to t('page.welcome.stillage_warehouse'), stillage_warehouse_index_path, class: 'menu__item'
                    %li
                      =link_to t('page.welcome.stillage_pallet'), stillage_pallet_index_path, class: 'menu__item'
                    %li
                      =link_to t('page.welcome.troles'), trolley_index_path, class: 'menu__item'
                    %li
                      =link_to t('page.welcome.stillage_mezonin'), mezzanine_index_path, class: 'menu__item'
                    %li
                      =link_to t('page.welcome.platform'), platform_index_path, class: 'menu__item'
                    %li
                      =link_to t('page.welcome.loft'), lofts_path, class: 'menu__item'
                    %li
                      =link_to t('page.welcome.gallery'), gallery_index_path, class: 'menu__item'
                    %li
                      .menu__box__name
                        = t('page.layout.company')
                    %li
                      =link_to t('page.layout.drop_menu.contact'), contact_index_path, class: 'menu__item'
                    %li
                      =link_to t('page.layout.drop_menu.about_us'), about_us_path, class: 'menu__item'
                    %li
                      =link_to t('page.layout.drop_menu.news'), news_index_path, class: 'menu__item'
                    %li
                      =link_to t('page.layout.drop_menu.article'), article_index_path, class: 'menu__item'

                .col-xs-2.col_header1
                  =link_to image_tag("design/all_parts/Header/stm_industry_white_logo_350.png", class: "logo", :title => t('to_root')), welcome_index_path
                  -#%a{:href => root_path}
                  -#  .text_pp
                  -#    %span.colortext1
                  -#      =t('page.layout.pp')
                  -#    %span.colortext2
                  -#      =t('page.layout.kremenchuk')



                .col-xs-3.col_header3
                  %ul.dropdown
                    =t('page.layout.production')
                    %li.dropdown-top
                      %ul.dropdown-inside.appl_prod_ul
                        %li
                          =link_to t('page.layout.drop_menu.stillage'), stillage_index_path
                        %li
                          =link_to t('page.layout.drop_menu.warehouse'), stillage_warehouse_index_path
                        %li
                          =link_to t('page.layout.drop_menu.pallet'), stillage_pallet_index_path
                        %li
                          =link_to t('page.layout.drop_menu.trolleys'), trolley_index_path
                        %li
                          =link_to t('page.layout.drop_menu.mezzanine'), mezzanine_index_path
                        %li
                          =link_to t('page.layout.drop_menu.platform'), platform_index_path
                        %li
                          =link_to t('page.layout.drop_menu.loft'), lofts_path
                        %li
                          =link_to t('page.layout.drop_menu.gallery'), gallery_index_path

                .col-xs-2.col_header4
                  %ul.dropdown
                    = t('page.layout.company')
                    %li.dropdown-top
                      %ul.dropdown-inside.appl_about_ul
                        %li
                          =link_to t('page.layout.drop_menu.contact'), contact_index_path
                        %li
                          =link_to t('page.layout.drop_menu.about_us'), about_us_path
                        %li
                          =link_to t('page.layout.drop_menu.news'), news_index_path
                        %li
                          =link_to t('page.layout.drop_menu.article'), article_index_path

                .col-xs-2.col_header5
                  %ul.dropdown
                    = t("languages.#{I18n.locale}").mb_chars.upcase.to_s
                    %li.dropdown-top
                      %ul.dropdown-inside.appl_lang_ul
                        -I18n.available_locales.each do |locale|
                          -unless locale == :en
                            %li
                              = link_to t(locale), locale_path(:new_locale => locale), :method => :put
                .col-xs-2.col_header2
                  - if current_user
                    = current_user.email
                    %p
                      =link_to t('page.layout.sign_out'), destroy_user_session_path
                  - else
                    .about_href
                      = link_to t('page.layout.sign_in'), new_user_session_path
                      %p
                        = link_to t('page.layout.registration'), new_user_registration_path
      .wrapper
        .sessionInfo
          =yield
      .fix_footer
        .container-fluid
          .row
            .col-xs-12
              .container-fluid
                .row
                  .col-xs-7
                    .col-xs-12.footer_contacts
                      = t('page.contacts.index.header')
                    .col-md-12.footer_contacts
                      - @contacts.each_with_index do |contact, index|
                        - if index == 0
                          - next
                        - if eval(contact.name)[locale] == 'map'
                          - contact_map = contact
                          - next
                        - else
                          .col-md-4
                            %li
                              = "#{eval(contact.name)[locale]}:"
                          .col-md-8

                            = raw(eval(contact.text)[locale])
                      .col-md-12
                        %li
                          = link_to  t('page.contacts.index.map'), "#{contact_index_url}#contact_map"
                  .col-xs-5
                    .footer_text
                      = t('page.all.footer')


